%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path

  - if user_logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
      %li= link_to "Invite friend", new_invitation_path

    = form_tag search_videos_path, method: :get, enforce_utf8:false, class:'col-md-5 navbar-form' do
      .form-group
        = text_field_tag :q, nil, placeholder:'Search for videos here', class:'form-control'
      = button_tag 'Search', class:'btn btn-default'
      &nbsp;&nbsp;&nbsp;&nbsp;
      = link_to 'Advanced Search', advanced_search_videos_path

    #user_links.pull-right
      %ul
        %li.dropdown
          = link_to '#', id:'dlabel', class:'dropdown-toggle', role:'button', 'data-toggle' => 'dropdown', 'data-target' => '#' do
            Welcome, #{current_user.name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Account', user_path(current_user)
              = link_to 'Plan and Billing'
              = link_to 'Sign Out', logout_path
