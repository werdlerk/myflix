%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = form_for [:admin, @video], html: { class: 'form-horizontal' } do |f|
          %ul.nav.nav-tabs
            %li
              = link_to admin_path do
                %span.glyphicon.glyphicon-home
            %li
              %a(href="") Recent Payments
            %li.active
              = link_to 'Add a New Video', new_admin_video_path
          %br
          %fieldset
            .form-group
              = f.label :title, class: 'control-label col-sm-3'
              .col-sm-3
                = f.text_field :title, class: 'form-control'
            .form-group
              = f.label :category, class: 'control-label col-sm-3'
              .col-sm-6
                = f.select :category_id, options_from_collection_for_select(@categories, :id, :name), { include_blank: true }, class: 'form-control'
            .form-group
              = f.label :description, class: 'control-label col-sm-3'
              .col-sm-6
                = f.text_area :description, class: 'form-control', rows: 8
            .form-group
              = f.label :large_cover, class: 'control-label col-sm-3'
              .col-sm-6
                %col.btn.btn-file
                  = f.file_field :large_cover, class: 'form-control'
            .form-group
              = f.label :small_cover, class: 'control-label col-sm-3'
              .col-sm-6
                %col.btn.btn-file
                  = f.file_field :small_cover, class: 'form-control'

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit 'Add Video', class: 'btn btn-default'
