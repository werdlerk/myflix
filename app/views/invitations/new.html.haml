%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = render 'shared/validation_messages', object: @invitation
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation, class:'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!

        %fieldset
          .form-group
            = f.label :name, 'Friend\'s Name'
            .row
              .col-sm-4
                = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :email, 'Friend\'s Email Address'
            .row
              .col-sm-4
                = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :message, 'Invitation Message'
            .row
              .col-sm-6
                = f.text_area :message, rows: 6, class: 'form-control'

        %fieldset.form-group.action
          = f.submit 'Send Invitation', class: 'btn btn-default'
