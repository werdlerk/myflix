%section.people
  %header
    %h2 People I Follow

  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @relationships.each do |relationship|
        %tr
          %td
            = link_to relationship.follower do
              = image_tag relationship.follower.gravatar_image
            = link_to relationship.follower.name, relationship.follower
          %td.extra-padding= relationship.follower.queue_items.count
          %td.extra-padding= relationship.follower.followers.count
          %td.extra-padding
            = link_to relationship, method: :delete, 'data-confirm' => "Are you sure you want to stop following #{relationship.follower.name}?" do
              %i.glyphicon.glyphicon-remove
