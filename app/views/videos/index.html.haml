- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name

    .videos.row
      - category.videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video) do
            %img{src:"/tmp/#{video.small_cover_url}", width:166, height:236}
